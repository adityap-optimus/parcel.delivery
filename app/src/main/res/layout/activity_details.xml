<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="3"
                android:orientation="vertical">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/ivProductImage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:background="@color/transparent"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    android:text="@string/label_parcel_date"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="left|top"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="4"
                android:background="@drawable/bg_product_details"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvProductTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/bg_product_title"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_type" />

                    <TextView
                        android:id="@+id/tvProductType"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_rupee" />

                    <TextView
                        android:id="@+id/tvProductPrice"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_weight" />

                    <TextView
                        android:id="@+id/tvProductWeight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_quantity" />

                    <TextView
                        android:id="@+id/tvProductQuantity"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_contact" />

                    <TextView
                        android:id="@+id/tvContactNo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:layout_weight="3.5"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="11sp" />

                    <View
                        android:id="@+id/viewColor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="@string/label_product_color"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/bg_product_details"
            android:gravity="center"
            android:text="@string/label_product_location"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:layout_weight="3"
            tools:context=".DetailsActivity" />
    </LinearLayout>

    <com.aditya.hackerearth.porterapp.helper.ui.OverlayButton
        android:id="@+id/obRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:ob_colorNormal="@color/transparent"
        app:ob_colorPressed="@color/transparent20"
        app:ob_icon="@drawable/ic_refresh" />

    <com.aditya.hackerearth.porterapp.helper.ui.OverlayMenu
        android:id="@+id/omShareMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        app:ob_addButtonColorNormal="@color/bg_overlay_blue"
        app:ob_addButtonColorPressed="@color/bg_overlay_blue_pressed"
        app:ob_iconRef="@drawable/ic_more">

        <com.aditya.hackerearth.porterapp.helper.ui.OverlayButton
            android:id="@+id/obShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ob_colorNormal="@color/bg_overlay_blue"
            app:ob_colorPressed="@color/bg_overlay_blue_pressed"
            app:ob_icon="@drawable/ic_share" />

        <com.aditya.hackerearth.porterapp.helper.ui.OverlayButton
            android:id="@+id/obLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ob_colorNormal="@color/bg_overlay_blue"
            app:ob_colorPressed="@color/bg_overlay_blue_pressed"
            app:ob_icon="@drawable/ic_link" />

        <com.aditya.hackerearth.porterapp.helper.ui.OverlayButton
            android:id="@+id/obSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ob_colorNormal="@color/bg_overlay_blue"
            app:ob_colorPressed="@color/bg_overlay_blue_pressed"
            app:ob_icon="@drawable/ic_sms" />

    </com.aditya.hackerearth.porterapp.helper.ui.OverlayMenu>


</RelativeLayout>
